
<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <link rel="stylesheet" href="/home.css">
        <script src="https://kit.fontawesome.com/048607c7f6.js" crossorigin="anonymous"></script>
    </head>
    <body>
      <h3 id=para-head style="margin:auto;">  <button style="height: 27px; width: 40px;"><i class="fas fa-address-book"></i></button> My Contacts List</h3>
        <div id="new-layer">
            <div style="margin: 25px 410px;" >
                <form action="/search" method="post">
                   <input style="height:30px;width:300px;border:solid;" type="text" name="name" placeholder=" Search Name/Number..." required>
                   <button style="height:30px;width:200px;border:solid;" type="submit"><i class="fas fa-search"></i></button>
                </form>
               </div> 
                <div id="cont">
                    <% if(searched.name!='') {%>
                <p style="margin-top:0px;"><%= searched.name %>                  <%= searched.num %></p>                                      
                <div id="delete-contact" style="margin-left:400px ; margin-top: -50px;">
                    <a href="/delete-contact/?id=<%= searched._id %>">
                        <button><i class="far fa-trash-alt"></i></button>
                    </a>
            </div>
            <div id="clear-contact" style="margin-top:50px;margin-left: 240px;">
                <a href="/clear-contact">
                    <button><i class="fas fa-user-times"></i></button>
                </a>
        </div>
                <% } else { %>
                    <p style="text-align: center;">Search a valid name or number</p>
                  <% } %>
                </div>
           
            <ul>
                   
                <% for (let i of contact_list) { %> 
                    <li>  <div id ="hovering">                     
                       <p>Name:<%= i.name %></p>
                        <p>Phone:<%= i.phone %></p>
                        </div>
                    </li>
                    <div id="delete-contact">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <button><i class="far fa-trash-alt"></i></button>
                            </a>
                    </div>
                <% } %>
            </ul>
<div id="edit-form">
        <form  action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter phone" required>
            <button type="submit"><i class="fas fa-user-plus"></i></button>
        </form>
        </div>
        </div>
<script type="text/javascript" src="/home.js"></script>
    </body>
</html>